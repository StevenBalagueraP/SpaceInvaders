<Page x:Class="SpaceInvaders.Presentation.StartGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SpaceInvaders.Presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      Background="{ThemeResource BackgroundBrush}">

    <Grid utu:SafeArea.Insets="VisibleBounds" 
          DataContext="{Binding}" 
          KeyDown="Grid_KeyDown" 
          x:Name="gridGame" 
          IsTabStop="True">
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Images/GameImage.png" Stretch="UniformToFill" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
           Text="{Binding LifeText, Mode=TwoWay}"
           Margin="10,20,80,0"    
           HorizontalAlignment="Right"
           VerticalAlignment="Top"
           FontSize="35"
           Foreground="White"
           FontWeight="Bold" />

        <TextBlock Grid.Row="0"
           x:Name="ScoreTextBlk"
           Text="{Binding ScoreText, Mode=TwoWay}"
           Margin="80,20,10,0"    
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           FontSize="35"
           Foreground="White"
           FontWeight="Bold" />

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Canvas x:Name="GameCanvas" Width="400" Height="600">

            </Canvas>
            
        </StackPanel>
        <StackPanel x:Name="GameOverPanel"
            Visibility="Collapsed"
            Background="Black"
            Padding="20"
            Opacity="0.8"
            Width="300"
            Height="250"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="10"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <TextBlock Text="GAME OVER"
               FontSize="30"
               Foreground="Red"
               FontWeight="Bold"
               TextAlignment="Center"
               Margin="0,10,0,10"
               HorizontalAlignment="Center"/>

            <TextBlock Text="Enter Your Name: "
               FontSize="18"
               Foreground="White"
               Margin="0,5,0,5"
               HorizontalAlignment="Center"/>

            <TextBox x:Name="PlayerNameInput"
             Width="200"
             PlaceholderText="Name..."
             Foreground="White"
             HorizontalAlignment="Center"/>

            <Button Content="Guardar Puntaje"
            Click="SaveScore_Click"
            Background="Gray"
            Foreground="White"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</Page>

